<phpunit>
    <testsuites>
        <testsuite name="Drupal Test">
            <directory>./</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory suffix=".php">../www/sites/all/theme/dm_skin</directory>
        </whitelist>
    </filter>

    <logging>
        <log type="coverage-html" target="../../builds/coverage" title="Drupal Test"
             charset="UTF-8" yui="true" highlight="true"
             lowUpperBound="35" highLowerBound="70"/>
        <log type="coverage-clover" target="../../builds/logs/clover.xml"/>
        <log type="junit" target="../../builds/logs/junit.xml" logIncompleteSkipped="false"/>
    </logging>
</phpunit>